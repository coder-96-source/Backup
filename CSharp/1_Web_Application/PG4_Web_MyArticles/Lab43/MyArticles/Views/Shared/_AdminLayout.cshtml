<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Jason Kim ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.Partial("NavbarAdminPartial")
    
    <div class="container body-content">
        <div class="jumbotron">
            <h3 class="modal-title text-center">Admin Section</h3>
        </div>
        <div class="row content">
            <div class="col-sm-3">
                <ul class="list-group text-center">
                    <li class="list-group-item">@Html.ActionLink("Topic", "TopicIndex")</li>
                    <li class="list-group-item">@Html.ActionLink("Article", "ArticleIndex")</li>
                </ul>
            </div>
            <div class="col-sm-9">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - Jason Kim ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
